<body style="background-color: #E6E6E6;" ng-app="AddIssueApp">

    <div class="headText" style="color:Black;">
      <h2 style=" color: #555; font-family: arial,sans-serif; margin: 15px 0; text-align: center;">SearchNext</h2>
      <div style="padding-left:90%; font-size:20px;"><a href="../Home/Index">Search Issue</a></div>
   </div>

    <div ng-controller="AddIssuecont" class="container" style="padding-top:30px;">

 @*  <div style="width:100%; height:20%; padding-bottom:20px; padding-top:10px;padding-left: 150px;"><h2><b>SearchNext</b></h2></div>*@
        <form id="myForm" data-toggle="validator" role="form">
        <div>
  

            <div class="col-md-10">
                <div class="col-md-3 form-group" >
                     <label for="projectName" class="control-label">Project Name</label>
                    <input class="form-control"  id="projectName" type="text" placeholder="Enter Project Name" ng-model="Projectname" required>
                </div>
                <div class="col-md-3 form-group">
                    <label for="ex2">
                        Type Of Issue</label>
                   <select class="form-control" ng-model="selectedTypeOfIssue" ng-options="typissue.Text for typissue in TypeOfIssue" >
                  
                    </select>
                </div>
                <div class="col-md-3 form-group">
                    <label for="Loggedbylbl" class="control-label">Logged By</label>
                    <input class="form-control" id="Loggedbylbl" type="text" ng-model="Loggedby"  data-toggle="tooltip" title="Please Enter name who solves this issue." required>
                </div>
            </div>
            <div class="col-md-10">
             
                <div class="col-md-3">
                    <label for="ex2">
                        Instance</label>
                    <select class="form-control" ng-model="selectedInstance" ng-options="Inst.Text for Inst in Instance" >
                  
                    
                      
                    </select>
                </div>
                 <div class="col-md-7 form-group">
                    <label for="subjectlbl" class="control-label">Issue Subject</label>
                        <input class="form-control" id="subjectlbl" type="text"  ng-model="IssueSubject" data-toggle="tooltip" title="Subject Should be Specific." required>
                    </div>
                </div>
            <div class="col-md-8">
                    
                    <div class="col-md-4">
                   
                    </div>
                    
                </div>
            <div class="col-md-10">
                <div class="col-md-10 form-group">
                    <label for="ex2">
                        Issue Description</label>
                       
                    <textarea class="form-control" data-toggle="tooltip" title="Please enter Issue with Discription." id="discriptionid" ng-model="Issuedescription" required></textarea>
                    </div>
                </div>

            <div class="col-md-10">
            <div class="col-md-10">
                  <label for="ex2">
                        Issue Resolution</label>
                 <div class="col-md-10" id="summernote"></div>

                 </div>
                 </div>
                     <div class="col-md-10 form-group" style="margin-left:25%;">
                    
                          <button type="submit"  class="btn btn-primary">
                              <i class="fa fa-spinner fa-spin"></i>
                          Submit</button>
                    </div>
   

                </div>
                        
        </form>
    </div>
	

    <div class = "modal fade" id = "myModal" tabindex = "-1" role = "dialog" 
   aria-labelledby = "myModalLabel" aria-hidden = "true">
   
   <div class = "modal-dialog modal__bg ">
      <div class = "modal-content">
         
         <div class = "modal-header">
            <button type = "button" class = "close" data-dismiss = "modal" aria-hidden = "true">
               ×
            </button>
            
            <h4 class = "modal-title" id = "myModalLabel">
             <b> Thank You </b>
            </h4>
         </div>
         
         <div class = "modal-body" id="Msgcontent">
         </div>
         
         <div class = "modal-footer">
            <button type = "button" class = "btn btn-default" data-dismiss = "modal">
               OK
            </button>
          
         </div>
         
      </div><!-- /.modal-content -->
   </div><!-- /.modal-dialog -->
   
</div><!-- /.modal -->
    
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="/SearchAll/Content/Js/jquery-3.1.1.js" type="text/javascript"></script>
    <script src="/SearchAll/Scripts/angular.js" type="text/javascript"></script>
    <script src="/SearchAll/Scripts/AddIssueController.js" type="text/javascript"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="/SearchAll/Bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/SearchAll/Bootstrap/js/validator.js" type="text/javascript"></script>
<script src="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.2/summernote.js"></script>

</body>
</html>
